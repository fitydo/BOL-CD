# BOL-CD Environment Variables
# Copy this file to .env and update with your values

# === Plan Tier ===
# Options: starter, standard, enterprise
BOLCD_PLAN_TIER=standard

# === API Configuration ===
BOLCD_BASE_URL=http://localhost:8080
BOLCD_API_KEYS=admin:admin_key_123,viewer:viewer_key_456

# === Database ===
BOLCD_DATABASE_URL=sqlite:///./bolcd.db
# For PostgreSQL: postgresql://user:pass@localhost/bolcd

# === SIEM Connections (Optional) ===
# Splunk
BOLCD_SPLUNK_URL=http://localhost:8089
BOLCD_SPLUNK_TOKEN=your_splunk_token_here

# Azure Sentinel
BOLCD_SENTINEL_WORKSPACE_ID=your_workspace_id
BOLCD_AZURE_TOKEN=your_azure_token
BOLCD_AZURE_SUBSCRIPTION_ID=your_subscription_id
BOLCD_AZURE_RESOURCE_GROUP=your_resource_group
BOLCD_AZURE_WORKSPACE_NAME=your_workspace_name

# OpenSearch
BOLCD_OPENSEARCH_ENDPOINT=http://localhost:9200
BOLCD_OPENSEARCH_BASIC=user:password

# === Authentication ===
BOLCD_JWT_SECRET=your-secret-key-change-this-in-production
BOLCD_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# === SAML SSO (Optional) ===
# For demo/testing, these can be left empty
BOLCD_SAML_IDP_TYPE=generic
BOLCD_SAML_IDP_ENTITY_ID=
BOLCD_SAML_IDP_SSO_URL=
BOLCD_SAML_IDP_SLO_URL=
BOLCD_SAML_IDP_CERT=
BOLCD_SAML_SP_CERT=
BOLCD_SAML_SP_KEY=

# === Data Retention ===
# Automatically set based on BOLCD_PLAN_TIER
# Override if needed
# BOLCD_RETENTION_DAYS_ALERTS=90
# BOLCD_RETENTION_DAYS_AUDIT=365

# === Rate Limiting ===
BOLCD_RATE_LIMIT_ENABLED=1
BOLCD_RATE_LIMIT_PER_MINUTE=100

# === Storage ===
BOLCD_STORAGE_PATH=./data

# === Redis Cache (Optional) ===
BOLCD_REDIS_URL=redis://localhost:6379/0

# === Monitoring ===
BOLCD_METRICS_ENABLED=1
BOLCD_AUDIT_ENABLED=1
